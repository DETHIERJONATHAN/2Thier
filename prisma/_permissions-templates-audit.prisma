model Permission {
  id        String   @id @default(uuid())
  role      Role     @relation(fields: [roleId], references: [id])
  roleId    String
  action    String
  resource  String
  allowed   Boolean
  context   Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PermissionTemplate {
  id          String   @id @default(uuid())
  name        String
  description String?
  permissions Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PermissionAuditLog {
  id           String   @id @default(uuid())
  userId       String
  roleId       String
  permissionId String?
  action       String
  before       Json?
  after        Json?
  createdAt    DateTime @default(now())
}
