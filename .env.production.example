# Configuration pour la production
# Ce fichier contient les variables d'environnement pour le mode production
# Copiez ce fichier et renommez-le en .env.production avant le déploiement

# Mode environnement
NODE_ENV=production
PORT=8080

# Configuration de l'API
VITE_API_BASE_URL=https://app.2thier.be
API_URL=https://app.2thier.be
FRONTEND_URL=https://app.2thier.be
BACKEND_URL=https://app.2thier.be

# Google Cloud SQL (Unix Socket)
PGHOST=/cloudsql/thiernew:europe-west1:crm-postgres-prod
PGDATABASE=2thier
PGUSER=postgres
PGPASSWORD=SECRET_FROM_GOOGLE_SECRET_MANAGER

# Secrets (À stocker dans Google Secret Manager)
JWT_SECRET=SECRET_FROM_GOOGLE_SECRET_MANAGER
SESSION_SECRET=SECRET_FROM_GOOGLE_SECRET_MANAGER
ENCRYPTION_KEY=SECRET_FROM_GOOGLE_SECRET_MANAGER
CRYPTO_SECRET_KEY=SECRET_FROM_GOOGLE_SECRET_MANAGER

# Sécurité
DISABLE_AUTH=false
ENFORCE_PERMISSIONS=true
DISABLE_DEV_FEATURES=true
FORCE_REAL_DATA=true

# Logging
ENABLE_API_LOGS=false
LOG_LEVEL=warn

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://app.2thier.be/api/google-auth/callback

# Google AI (Gemini)
GOOGLE_AI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
AI_MODE=auto
AI_MAX_RETRIES=2
AI_TIMEOUT_MS=15000
AI_RETRY_TIMEOUT_INCREMENT_MS=3000

# Google Cloud (notifications)
GOOGLE_PROJECT_ID=

# Telnyx (voix/SMS)
TELNYX_API_KEY=
TELNYX_WEBHOOK_SIGNING_SECRET=
APP_URL=https://app.2thier.be
