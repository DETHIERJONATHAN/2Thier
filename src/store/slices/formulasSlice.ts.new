      console.log(`[CRMStore][updateFormula] üì§ JSON brut envoy√©:`, dataToSend);
      
      const res = await fetchWithAuth(`/api/formulas/${formulaId}`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
